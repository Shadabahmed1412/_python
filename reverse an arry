# revesing arry  using loop 

def reverse(arr,start,end):
    
    while start<end:
     arr[start],arr[end]= arr[end],arr[start]
      
    
     start +=1
     end -=1


arr=[12,10,55,22]
print(arr)
reverse(arr,0,3)
print(arr)


